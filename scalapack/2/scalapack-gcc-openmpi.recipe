tar xvf scalapack-2.1.0.tar.gz
cd scalapack-2.1.0
rm -fr build
mkdir build
cd build
module purge
module load openmpi/4/gcc/latest
cmake .. -DLAPACK_LIBRARIES=/opt/software/openblas/0.3.17-gcc/lib/libopenblas.so -DBLAS_LIBRARIES=/opt/software/openblas/0.3.17-gcc/lib/libopenblas.so -DCMAKE_Fortran_FLAGS="-fallow-argument-mismatch" -DBUILD_SHARED_LIBS=ON -DCMAKE_INSTALL_PREFIX=/opt/software/scalapack/2/2.1.0-gcc-openmpi
make -j 128 && make install

