CC=icc GXX=icpc FC=ifort ./configure --prefix=/opt/software/${NAME}/${MAJOR_VERSION}/$VERSION-${COMPILER}  --with-pmix=internal  --with-hwloc=internal --disable-silent-rules --enable-builtin-atomics --enable-mpi-cxx --enable-mpi1-compatibility --with-hwloc=internal  --without-verbs
make -j 24 install  || exit


