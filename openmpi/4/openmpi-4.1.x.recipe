NAME="openmpi"
INSTALL_NAME="openmpi"
MAJOR_VERSION="4"
MINOR_VERSION="1.x"

VERSION=${MAJOR_VERSION}.${MINOR_VERSION}

# Exports useful for compiling inside a container

export LANG=C
export LC_ALL=C


# LLVM

COMPILER='llvm'

module purge
module load llvm/latest-gcc

cd ~/build
rm -fr ${NAME}-${VERSION}
tar xvf ${INSTALL_NAME}-${VERSION}.tar.bz2 2>&1 > /dev/null
cd ${NAME}-${VERSION}

CC=clang GXX=clang++ FC=flang FCFLAGS="-fallow-argument-mismatch" ./configure --prefix=/opt/software/${NAME}/${MAJOR_VERSION}/$VERSION-${COMPILER}  --with-pmix=internal  --with-hwloc=internal --disable-silent-rules --enable-builtin-atomics --enable-mpi-cxx --enable-mpi1-compatibility --with-hwloc=internal  --without-verbs

make -j 24 install || exit


# Intel oneAPI

COMPILER='intel'

