                           -DCMAKE_VERBOSE_MAKEFILE=OFF \
                           -DBUILD_TESTING=OFF \
                           -DCMAKE_C_FLAGS="-tp=zen2 -Mcache_align -fast -Mvect -mavx2 -fPIC" \
